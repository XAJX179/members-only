<%= form_with model: @post do |f| %>
  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title, autofocus: true, autocomplete: "title", minlength: 4 %>
  </div>
  <div class="field">
    <%= f.label :body %><br/>
    <%= f.text_field :body, autocomplete: "body", minlength: 20 %>
  </div>
  <div class="actions">
    <%= f.submit "Create Post" %>
  </div>
<% end %>

<%= link_to "Back", posts_path %>
